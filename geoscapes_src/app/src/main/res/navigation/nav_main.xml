<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/mapsFragment">

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.geoscapes.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings"
        />
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.geoscapes.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" />
    <action
        android:id="@+id/action_mapsFragment_to_tutorialFragment"
        app:destination="@id/tutorialFragment"
        app:enterAnim="@android:anim/fade_in" />
    <fragment
        android:id="@+id/tasksFragment"
        android:name="com.example.geoscapes.TasksFragment"
        android:label="TasksFragment"
        tools:layout="@layout/fragment_tasks"/>
    <fragment
        android:id="@+id/tutorialFragment"
        android:name="com.example.geoscapes.TutorialFragment"
        android:label="TutorialFragment"
        tools:layout="@layout/tutorial_dialog"/>

</navigation>